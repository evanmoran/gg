
@import "mixins/solarized"

body
  background-color: solarLightBody
  font-family: "helvetica neue", "helvetica", sans-serif

h1.title
  text-align: center
  margin-top: 16px
  margin-bottom: 1px

.title-g
  color: #555
  font-weight: 100

.title-o
  color: #999
  font-weight: 100

.subtitle
  color: black
  text-transform: uppercase
  font-weight: 200
  font-size: 15px
  text-align: center
  margin 0 -20px 0 -23px
  padding-bottom: 41px
  border-bottom: 1px solid #ccc


h2
  color: #444
  font-weight: 200
  font-size: 1.1em

a
  color: solarBlue
  text-decoration: none
  &:hover
    text-decoration: underline

.gg
  background-color: white
  box-shadow: 0px 0px 6px 1px #AAA

gridWithShadow(color)
  text-align: center
  background-color: color
  color: white
  box-shadow: 2px 2px 3px 0px rgba(1, 1, 1, 0.5)

.blue
  gridWithShadow: solarBlue

.green
  gridWithShadow: solarGreen

.purple
  gridWithShadow: solarMagenta

.orange
  gridWithShadow: solarOrange

.shadow
  box-shadow: 2px 2px 4px 1px rgba(1, 1, 1, 0.4)
  background-color: white

  .label
    text-align: center
    margin: 8px 0 14px

