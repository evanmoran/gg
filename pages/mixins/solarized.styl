// base02           #073642   ---            bg highlight
// base01           #586e75   emphasis       comment
// base00           #657b83   text           ---
// base0            #839496   ---            text
// base1            #93a1a1   comment        emphasis
// base2            #eee8d5   bg highlight   ---
// base3            #fdf6e3   bg             ---

// Light
solarLightBody = #fdf6e3
solarLightBodyEmphasis = #eee8d5
solarLightText = #657b83
solarLightTextComment = #93a1a1
