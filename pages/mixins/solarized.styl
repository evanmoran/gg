// Dark
solarDarkBody = #002b36
solarDarkBodyEmphasis = #073642
solarDarkText = #839496
solarDarkTextComment = solarLightTextEmphasis
solarDarkTextEmphasis = solarLightTextComment

// Accents
solarYellow =  #b58900
solarOrange = #d75f00
solarRed = #dc322f
solarMagenta = #d33682
solarViolet = #6c71c4
solarBlue = #268bd2
